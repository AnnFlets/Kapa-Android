        android:layout_height="420sp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/white"
        android:layout_marginTop="150sp"
        app:cardCornerRadius="20sp"
        app:cardElevation="50sp"
        >
        <LinearLayout
