                android:textColor="#5E5E5E"
                android:textSize="40sp"
                android:layout_marginTop="50sp"
                android:gravity="center"
                android:fontFamily="sans-serif-black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
