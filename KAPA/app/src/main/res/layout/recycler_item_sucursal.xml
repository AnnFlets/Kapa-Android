<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DBF8FF">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp"
        app:cardElevation="10sp"
        android:layout_margin="15sp"
        android:backgroundTint="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/txtNombreSucursal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUCURSAL"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#8089C5"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="8sp"
                android:layout_marginLeft="10sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="7sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección: "
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp"
                    android:textColor="#4E4E4E"
                    />
                <TextView
                    android:id="@+id/txtDireccionSucursal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5ta. Avenida, 26-14, Zona 2"
                    android:textSize="15sp"
                    android:textColor="#474747"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono: "
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp"
                    android:textColor="#4E4E4E"
                    />
                <TextView
                    android:id="@+id/txtTelefonoSucursal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11223344"
                    android:textSize="15sp"
                    android:textColor="#4E4E4E"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>