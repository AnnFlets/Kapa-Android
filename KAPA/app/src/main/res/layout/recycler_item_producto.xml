<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF7CC">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp"
        app:cardElevation="10sp"
        android:layout_margin="15sp"
        android:backgroundTint="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/imgProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/caja"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txtDescripcionProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRODUCTO"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#C18816"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="8sp"
                    android:layout_marginLeft="10sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MARCA: "
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textColor="#4E4E4E"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/txtMarcaProducto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MARCA"
                        android:textSize="15sp"
                        android:textColor="#474747"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="7sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRESENTACIÓN: "
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textColor="#4E4E4E"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/txtPresentacionProducto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRESENTACIÓN"
                        android:textSize="15sp"
                        android:textColor="#474747"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRECIO: "
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textColor="#4E4E4E"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Q."
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textColor="#4E4E4E"
                        />
                    <TextView
                        android:id="@+id/txtPrecioProducto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11.25"
                        android:textSize="15sp"
                        android:textColor="#4E4E4E"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>